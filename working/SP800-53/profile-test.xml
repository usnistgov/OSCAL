<profile xmlns="http://scap.nist.gov/schema/oscal">
   <invoke href="SP800-53-OSCAL-refined.xml">
      <include>
         <call control-id="ac.1"><!--ACCESS CONTROL POLICY AND PROCEDURES--></call>
         <param id="ac-1_a">
            <desc>organization-defined personnel or roles</desc>
