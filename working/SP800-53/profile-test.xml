            <desc>organization-defined personnel or roles</desc>
            <default>organization-defined personnel or roles</default>
         </param>
         <param id="ac-2_c">
            <desc>organization-defined procedures or conditions</desc>
            <default>organization-defined procedures or conditions</default>
         </param>
         <param id="ac-2_d">
            <desc>organization-defined frequency</desc>
            <default>organization-defined frequency</default>
         </param>
         <call subcontrol-id="ac.2.2."><!--REMOVAL OF TEMPORARY / EMERGENCY ACCOUNTS--></call>
         <param id="ac-2_e">
               <desc>organization-defined time period for each type of account</desc>
